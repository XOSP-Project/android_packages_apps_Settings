<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings"
    android:title="@string/xosp_settings_title" >

    <PreferenceCategory
        android:title="Personalization">
        
        <!-- Notification manager -->
        <PreferenceScreen
                android:id="@+id/notification_manager"
                android:title="@string/notification_manager"
                android:fragment="com.android.settings.notification.NotificationManagerSettings"
                android:icon="@drawable/ic_settings_notifications"
                />
        
        <!-- Buttons -->
        <PreferenceScreen
                android:id="@+id/button_settings"
                android:title="@string/button_pref_title"
                android:fragment="com.android.settings.ButtonSettings"
                android:icon="@drawable/ic_settings_buttons"
                />
        
        <!-- Status bar -->
        <PreferenceScreen
                android:id="@+id/status_bar_settings"
                android:title="@string/status_bar_title"
                android:fragment="com.android.settings.cyanogenmod.StatusBarSettings"
                android:icon="@drawable/ic_settings_statusbar"
                />

</PreferenceCategory>
        
    <PreferenceCategory
        android:title="Security">
        
        <!-- Privacy Settings -->
        <PreferenceScreen
                android:id="@+id/privacy_settings_cyanogenmod"
                android:title="@string/privacy_settings_cyanogenmod_title"
                android:fragment="com.android.settings.cyanogenmod.PrivacySettings"
                android:icon="@drawable/ic_settings_privacy"
                />
        </PreferenceCategory>
    
        <!-- SystemApp Remover -->
        <PreferenceScreen
                android:id="@+id/system_app_remover"
                android:title="@string/system_app_remover"
                android:icon="@drawable/ic_settings_slim_sizer"
                android:fragment="com.android.settings.xosp.SystemappRemover" 
                />
        
    <PreferenceCategory
        android:title="About">
        
        <!-- About XOSP -->
         <PreferenceScreen
                android:id="@+id/about_rom"
                android:fragment="com.android.settings.xosp.About"
                android:title="@string/about_xosp" 
                android:icon="@drawable/ic_xosp_about_tint"
                />
    </PreferenceCategory>
</PreferenceScreen>