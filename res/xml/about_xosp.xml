	<PreferenceCategory
	    android:key="links"
	    android:title="@string/xosp_links">

	    <Preference
            android:key="xosp_site"
            android:icon="@drawable/ic_xosp_main"
            android:title="@string/xosp_site_title"
            android:summary="@string/xosp_site_summary" />

	    <Preference
            android:key="xosp_downloads"
            android:icon="@drawable/ic_xosp_main"
            android:title="@string/xosp_downloads_site_title"
