            android:key="xosp_translations"
            android:title="@string/xosp_translations_title"
            android:summary="@string/xosp_translations_summary" />

        <Preference
        	android:key="xosp_teespring"
        	android:title="@string/xosp_teespring_title"
        	android:summary="@string/xosp_teespring_summary" />

	    <Preference
            android:key="xosp_donate"
            android:title="@string/xosp_donate"
            android:summary="@string/xosp_donate_summary" />
                    
