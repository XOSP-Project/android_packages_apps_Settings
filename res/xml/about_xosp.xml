	    <Preference
            android:key="xosp_jenkins"
            android:title="@string/xosp_jenkins_site_title"
            android:summary="@string/xosp_jenkins_site_summary" />
	 
	    <Preference
            android:key="xosp_source"
            android:title="@string/xosp_source_title"
            android:summary="@string/xosp_source_summary" />
	        
	    <Preference
            android:key="xosp_devices_source"
            android:title="@string/xosp_devices_source_title"
            android:summary="@string/xosp_devices_source_summary" />

